{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declarationMap": true,
    "declaration": true,
    "composite": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "skipLibCheck": true,
    "rootDir": "src",
  },
  "exclude": ["**/__tests__/**/*", "**/build/**/*"],
  "include": ["src/**/*"],
}
